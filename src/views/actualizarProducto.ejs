    </header>
    
    <main class="register">
        <div class="contenedor">
            <form class="plantilla" action="/products/update/<%=product.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <article class="normal">
                    <h2 class="tituloNuevo"><label>Update Product</label></h2>
                </article>

                <div class="retro">
                    <%if(locals.errors){ %>       
                        <% errors.forEach(error =>{ %>
                        <li><%=error.msg%></li>
                    <% })%>
                    <% } %>
                </div>

                <article class="normal">
                    <input type="text" name="tradeMark" placeholder="Marca" value="<%=product.tradeMark%>" id="tradeMark" id="" />
                </article>
                <article class="normal">
                    <input type="text" name="model" placeholder="Modelo" id="model" value="<%=product.model%>" />
                </article>
                <article class="normal">
                    <input type="text" name="details" placeholder="Detalle" id="details" value="<%=product.details%>" />
                </article>
                <article class="diferente">
                    <h3 class="tituloLabel"><label for="pic" class="nuevaImagen">Product Picture</label></h3>
                    <input type="file" name="pic" id="pic" accept=".jpg,.png,.webp" />
                </article>
                <article class="normal">
                    <input type="text" name="stock" id="stock" placeholder="Stock" name="stock" value="<%=product.stock%>" />
                </article>
                <article class="diferente">
                    <h3 class="tituloLabel"><label>Manfucture Date</label></h3>
                    <input type="datetime" name="fechaManofactura" id="fechaManofactura" value="<%=product.dateManufactured%>" placeholder="mm/dd/yyyy" />
                </article>
                <article class="normal">
                    <input type="number" name="price" id="price" value="<%=product.price%>" placeholder="Precio"/>
                </article>
                <article class="normal">
                    <input type="text" name="category" id="category" placeholder= "Categoria(Numero)" value="<%=product.productCategory_id%>"/>
                </article>
                <article class="boton">
                    <button type="submit" class="enviar">Send</button>
                    <button type="reset">Erase</button>
                </article>
            </form>
        </div>
    </main>

    <script src="/js/preloder.js"></script>
    
