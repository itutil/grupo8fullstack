<link type ="text/css" rel="stylesheet" href="/css/password-validator.css">
<script src="/src/middleware/password-validator.js" crossorigin="anonymous"></script>

  <li>
    <div class="dropdown tooltip">
        <span class="tooltiptext">Sign up</span>
        <button class="dropbtn">
            <a href="#"><i class="fa-solid fa-pen-clip"></i></a></button>
        <div class="dropdown-content">
            <div class="login container">
                <form id="loginSignupEng" method="POST" action="/signup">
                    <label><b>First Name </b>
                    </label>
                    <input type="text" name="firstName" id="firstName" placeholder="Your first name">
                    <br><br>
                    <label><b>Last Name </b>
                    <input type="text" name="lastName" id="lastName" placeholder="Your last name">
                    <br><br>
                    <label><b>E-Mail </b>
                    </label>
                    <input type="text" name="eMail" id="eMail" placeholder="Email">
                    <br><br>
                    <label><b>Photo URL </b>
                    </label>
                    <input type="text" name="image" id="image" placeholder="Photo URL">
                    <br><br>
                    <label><b>Province </b>
                    </label>
                    <input type="text" name="province" id="province" placeholder="Province">
                    <br><br>
                    <label><b>Address </b>
                    </label>
                    <input type="text" name="address" id="address" placeholder="Address">
                    <br><br>
                    <label><b>PO Code </b>
                    </label>
                    <input type="text" name="poc" id="poc" placeholder="PO Code">
                    <br><br>
                    <label><b>City </b>
                    </label>
                    <input type="text" name="city" id="city" placeholder="City">
                    <br><br>                  
                    <label><b>Password </b>
                    <input type="password" name="password" id="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters required" placeholder="Password">
                    <br><br>
                        <div class="row p-2">
                            <div class="col p-2">
                    <input id="product-submit" class="btn btn-success col" type="submit" value="Submit">
                </div>
                <div class="col p-2">
                    <input class="btn btn-danger col" type="reset" value="Reset">
                </div>
                <div id="message">
                    <h3>Password must contain the following:</h3>
                    <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
                    <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
                    <p id="number" class="invalid">A <b>number</b></p>
                    <p id="length" class="invalid">Minimum <b>8 characters</b></p>
                  </div>
                    <br><br>
                </form>
            </div>
        </div>
    </div>
</li>